{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=MinigramDb;User Id=postgres;Password=Password123;"
  },
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "Your user identifier",
        "Required": true,
        "UserClaims": [ "sub" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "minigram-api",
        "DisplayName": "The Minigram API",
        "Scopes": [
          "Conversations.Read",
          "Conversations.Manage",
          "Friendships.Read",
          "Friendships.Manage"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "Conversations.Read",
        "DisplayName": "List and read your conversations and messages"
      },
      {
        "Name": "Conversations.Manage",
        "DisplayName": "Edit or delete your conversations, send messages"
      },
      {
        "Name": "Friendships.Read",
        "DisplayName": "Read your friend requests and friendships"
      },
      {
        "Name": "Friendships.Manage",
        "DisplayName": "Manage your friend requests and friendships"
      }
    ],
    "Clients": [
      {
        "ClientId": "minigram-angular",
        "ClientName": "The official SPA client",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "profile",
          "user_role",
          "Conversations.Read",
          "Conversations.Manage",
          "Friendships.Read",
          "Friendships.Manage"
        ],
        "RedirectUris": [
          "http://localhost:4200",
          "http://localhost:5000/swagger/oauth2-redirect.html",
          "https://localhost:5001/swagger/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4200",
          "http://localhost:5000",
          "https://localhost:5001"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      }
    ]
  }
}
