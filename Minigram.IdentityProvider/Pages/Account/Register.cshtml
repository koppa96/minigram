@page
@model Minigram.IdentityProvider.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
    Layout = "_Layout";
}

<main class="container vh-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 p-4 nb-card">
            <h3>Regisztráció</h3>

            <form method="post" class="w-100">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="row">
                    <div class="col-12">
                        <label asp-for="Username">Felhasználónév</label><br>
                        <input class="nb-textbox w-100" type="text" placeholder="A felhasználóneved" asp-for="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <label asp-for="Email">E-mail</label><br>
                        <input class="nb-textbox w-100" type="email" placeholder="Az e-mail címed" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <label asp-for="Password">Jelszó</label><br>
                        <input class="nb-textbox w-100" type="password" placeholder="A jelszavad" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <label asp-for="ConfirmPassword">Jelszó megerősítése</label><br>
                        <input class="nb-textbox w-100" type="password" placeholder="A jelszavad még egyszer" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex flex-row-reverse justify-content-between mt-4">
                    <button name="action" value="register" class="button-full">Regisztráció</button>
                    <button name="action" value="login" class="button-ghost">Vissza a bejelentkezéshez</button>
                </div>
            </form>
        </div>
    </div>
</main>

